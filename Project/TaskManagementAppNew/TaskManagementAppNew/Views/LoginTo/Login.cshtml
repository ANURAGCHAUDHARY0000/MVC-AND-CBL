@using TaskManagementAppNew.Models.ViewModels
@model LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<h2>Login</h2>
<div class="align-content-center">
    @using (Html.BeginForm("Login", "LoginTo", FormMethod.Post))
    {


        <div>
            <span style="color:blue">Enter EmailId: </span>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            <span>@Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })</span>
        </div>


        <div>
            <span style="color:blue">Enter Password: </span>
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
            <span>@Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })</span>
        </div>


        <label style="color:red">@Html.DisplayFor(x => x.LoginErrorMessage)</label><br />
        <input type="submit" value="Login" class="btn btn-primary" />

    }
</div>

