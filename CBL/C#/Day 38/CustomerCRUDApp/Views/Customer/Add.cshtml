
@model CustomerCRUDApp.Models.Buisness_Model.Customer

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.LabelFor(x => x.Id, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", style = "width: 400px;" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.FirstName, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", style = "width: 400px;" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.LastName, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", style = "width: 400px;" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Location, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.Location, new { @class = "form-control", style = "width: 400px;" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.City, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control", style = "width: 400px;" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.DateOfBirth, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control", style = "width: 400px;" })
                    </div>

                    @Html.ValidationSummary()
                    <button type="submit" class="btn btn-primary">Submit</button>
                }

            </div>
        </div>
    </div>

</body>
</html>
