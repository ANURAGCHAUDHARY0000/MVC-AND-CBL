
@model CustomerCRUDApp.Models.Buisness_Model.Customer

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Form</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label for="Id">ID:</label>
                            @Html.HiddenFor(x => x.Id, new { @class = "form-control", style = "width: 400px;" })
                        </div>
                        <div class="form-group">
                            <label for="FirstName">First Name:</label>
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", style = "width: 400px;" })
                        </div>
                        <div class="form-group">
                            <label for="LastName">Last Name:</label>
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", style = "width: 400px;" })
                        </div>
                        <div class="form-group">
                            <label for="Location">Location:</label>
                            @Html.TextBoxFor(x => x.Location, new { @class = "form-control", style = "width: 400px;" })
                        </div>
                        <div class="form-group">
                            <label for="City">City:</label>
                            @Html.TextBoxFor(x => x.City, new { @class = "form-control", style = "width: 400px;" })
                        </div>
                        <div class="form-group">
                            <label for="DateOfBirth">Date of Birth:</label>
                            @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control", style = "width: 400px;" })
                        </div>

                        @Html.ValidationSummary()
                        <button type="submit" class="btn btn-primary">Submit</button>
                    }

                </div>
            </div>
        </div>
    }

    }

</body>
</html>
